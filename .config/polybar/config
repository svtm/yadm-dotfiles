label-muted-size = 15

label-volume-padding-right = 

bar-volume-width = 10
bar-volume-indicator = /
bar-volume-indicator-foreground = ${colors.accent}
bar-volume-fill = -
bar-volume-fill-foreground = ${colors.accent}
